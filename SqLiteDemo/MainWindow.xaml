<Window x:Class="SqLiteDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqLiteDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition />
            <RowDefinition />


        </Grid.RowDefinitions>
        <Label Name="TitleLbl" Grid.Row="0" Content="SQLite Demo" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        <DataGrid Name="ProductDG" Grid.Row="1" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">

        <DataGrid.Columns>
            <DataGridTextColumn Header="Product ID" Binding="{Binding Id}"/>
            <DataGridTextColumn Header="Product Name" Binding="{Binding Name}"/>
            <DataGridTextColumn Header="Product Price" Binding="{Binding Price}"/>
            <DataGridTextColumn Header="Product Stock" Binding="{Binding stock}"/>
            <DataGridTextColumn Header="Product Description" Binding="{Binding Description}"/>
                <DataGridTemplateColumn Header="UpdateProduct">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" Click="UpdateProductforEdit"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="DeleteProduct">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="DeleteProduct"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="BlueViolet" BorderThickness="3" Margin="5" >
                <StackPanel Margin="5">
                    <Label Content="Add Product" HorizontalAlignment="Center" VerticalAlignment="Center"/> 
                    <Grid Margin="5" x:Name="AddProductGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="Name:" />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" />
                        <Label Grid.Row="1" Grid.Column="0" Content="Price:" />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Price}" />
                        <Label Grid.Row="2" Grid.Column="0" Content="Description:" />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Description}" />
                        <Label Grid.Row="3" Grid.Column="0" Content="Stock:" />
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding stock}" />
                        <Button Grid.Row="4"  Grid.ColumnSpan="2" Content="Add " Click="AddProduct"/>


                    </Grid>

                </StackPanel>
            </Border>
            <Border Grid.Column="1" BorderBrush="BlueViolet" BorderThickness="3" Margin="5" >
                <StackPanel Margin="5">
                    <Label Content="Update Product" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Grid Margin="5" x:Name="UpdateProductGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="Name:" />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" />
                        <Label Grid.Row="1" Grid.Column="0" Content="Price:" />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Price}" />
                        <Label Grid.Row="2" Grid.Column="0" Content="Description:" />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Description}" />
                        <Label Grid.Row="3" Grid.Column="0" Content="Stock:" />
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding stock}" />
                        <Button Grid.Row="4"  Grid.ColumnSpan="2" Content="Add " Click="UpdateProduct"/>


                    </Grid>

                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
